{
  "name": "magiclegacy/mtgjson-client",
  "description": "PHP SDK client to get data from mtgjson.com.",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgJson\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgJson\\Tests\\": "tests/"
    }
  },

  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-curl": "*",
    "ext-json": "*",

    "psr/http-client": "^1.0.2",
    "psr/http-factory": "^1.0.2",
    "psr/log": "^1.1.4||^2.0.0||^3.0.0",

    "eureka/component-curl": "^2.2.0",
    "eureka/component-serializer": "^2.0.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "dg/bypass-finals": "^1.5.1",
    "phpstan/phpstan": "^1.10.35",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.3.5",
    "squizlabs/php_codesniffer": "^3.7.2"
  }
}
