{
  "name": "magiclegacy/mtgjson-client",
  "description": "PHP SDK client to get data from mtgjson.com.",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgJson\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgJson\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",
    "ext-curl": "*",
    "ext-json": "*",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1|^2.0|^3.0",

    "thecodingmachine/safe": "^1.3",

    "eureka/component-curl": "^2.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "dg/bypass-finals": "^1.4",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
